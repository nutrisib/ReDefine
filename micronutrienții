    <script>
        const colorPalette = {
            darkBlue: '#0A2463',
            mediumBlue: '#3E92CC',
            crimson: '#D8315B',
            yellow: '#F4C150',
            green: '#06D6A0'
        };

        const tooltipConfig = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                },
                legend: {
                    position: 'top',
                    labels: {
                        font: {
                           family: 'Inter',
                           size: 14
                        },
                        color: '#212529'
                    }
                }
            }
        };
        
        function wrapLabel(label, maxLength = 16) {
            if (label.length <= maxLength) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).length > maxLength && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine += (currentLine === '' ? '' : ' ') + word;
                }
            });
            lines.push(currentLine.trim());
            return lines;
        }

        function initVitaminTypesDonut() {
            const ctx = document.getElementById('vitaminTypesDonut').getContext('2d');
            const data = {
                labels: ['Vitamine Liposolubile (A, D, E, K)', 'Vitamine Hidrosolubile (C, Complex B)'],
                datasets: [{
                    data: [4, 8], 
                    backgroundColor: [colorPalette.crimson, colorPalette.mediumBlue],
                    hoverOffset: 4
                }]
            };
            new Chart(ctx, {
                type: 'doughnut',
                data: data,
                options: { ...tooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 20
                            }
                        }
                    }
                }
            });
        }
        
        function initBVitaminsSourcesChart() {
            const ctx = document.getElementById('bVitaminsSourcesChart').getContext('2d');
            const data = {
                labels: ['B1 (Tiamina)', 'B2 (Riboflavina)', 'B3 (Niacina)', 'B5 (Acid Pantotenic)', 'B6 (Piridoxina)', 'B7 (Biotina)', 'B9 (Folat)', 'B12 (Cobalamina)'],
                datasets: [
                    {
                        label: 'Carne/Pește/Ouă',
                        data: [80, 70, 90, 60, 85, 75, 40, 100], 
                        backgroundColor: colorPalette.darkBlue,
                        stack: 'stack1'
                    },
                    {
                        label: 'Cereale Integrale/Leguminoase',
                        data: [70, 50, 80, 70, 70, 60, 80, 5], 
                        backgroundColor: colorPalette.mediumBlue,
                        stack: 'stack1'
                    },
                     {
                        label: 'Legume Verzi/Nuci/Semințe',
                        data: [50, 30, 40, 50, 55, 65, 70, 0], 
                        backgroundColor: colorPalette.green,
                        stack: 'stack1'
                    }
                ]
            };
            new Chart(ctx, {
                type: 'bar',
                data: data,
                options: { ...tooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            stacked: true,
                            title: { display: true, text: 'Vitamina B' }
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true,
                            title: { display: true, text: 'Aport Relativ (%)' }
                        }
                    }
                }
            });
        }

        function initMineralTypesPie() {
            const ctx = document.getElementById('mineralTypesPie').getContext('2d');
            const data = {
                labels: ['Macrominerale', 'Oligominerale'],
                datasets: [{
                    data: [7, 10], // Numărul de minerale comune în fiecare categorie
                    backgroundColor: [colorPalette.darkBlue, colorPalette.yellow],
                    hoverOffset: 4
                }]
            };
            new Chart(ctx, {
                type: 'pie',
                data: data,
                options: { ...tooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 20
                            }
                        }
                    }
                }
            });
        }
        
        window.addEventListener('load', () => {
            initVitaminTypesDonut();
            initBVitaminsSourcesChart();
            initMineralTypesPie();
        });
    </script>
</body>
