    <script>
        const colorPalette = {
            darkBlue: '#0A2463',
            mediumBlue: '#3E92CC',
            crimson: '#D8315B',
            yellow: '#F4C150',
            green: '#06D6A0'
        };

        const tooltipConfig = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                },
                legend: {
                    position: 'top',
                    labels: {
                        font: {
                           family: 'Inter',
                           size: 14
                        },
                        color: '#212529'
                    }
                }
            }
        };
        
        function wrapLabel(label, maxLength = 16) {
            if (label.length <= maxLength) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).length > maxLength && currentLine.length > 0) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine += (currentLine === '' ? '' : ' ') + word;
                }
            });
            lines.push(currentLine.trim());
            return lines;
        }

        function initPhytonutrientBenefitsDonut() { // Not used in this version, but kept the function for potential reuse.
            const ctx = document.getElementById('phytonutrientBenefitsDonut').getContext('2d');
            const data = {
                labels: ['Antioxidant', 'Antiinflamator', 'Stimulare Imunitate', 'Detoxifiere', 'Sănătate Celulară'],
                datasets: [{
                    data: [30, 25, 20, 15, 10], 
                    backgroundColor: [
                        colorPalette.mediumBlue,
                        colorPalette.crimson,
                        colorPalette.green,
                        colorPalette.yellow,
                        colorPalette.darkBlue
                    ],
                    hoverOffset: 4
                }]
            };
            new Chart(ctx, {
                type: 'doughnut',
                data: data,
                options: { ...tooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                boxWidth: 20
                            }
                        }
                    }
                }
            });
        }

        function initEnzymeFunctionChart() {
            const ctx = document.getElementById('enzymeFunctionChart').getContext('2d');
            const data = {
                labels: ['Amilaze', 'Lipaze', 'Proteaze', wrapLabel('Dizaharidaze & Peptidaze')],
                datasets: [{
                    label: 'Macronutrient principal digerat',
                    data: [40, 30, 25, 15], 
                    backgroundColor: [
                        colorPalette.mediumBlue, 
                        colorPalette.crimson, 
                        colorPalette.green, 
                        colorPalette.yellow
                    ],
                    borderColor: 'rgba(255, 255, 255, 0.5)',
                    borderWidth: 1,
                    borderRadius: 5,
                }]
            };
            new Chart(ctx, {
                type: 'bar',
                data: data,
                options: { ...tooltipConfig,
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Importanță relativă (%)' }
                        }
                    },
                    plugins: { ...tooltipConfig.plugins, legend: { display: false } }
                }
            });
        }
        
        window.addEventListener('load', () => {
            initEnzymeFunctionChart();
            // Assuming initPhytonutrientBenefitsDonut is not needed for this page
        });
    </script>
